{
  "index.queries.cache.enabled": true,
  "index.requests.cache.enable": true,
  "similarity": {
    "scripted_term_freq": {
      "type": "scripted",
      "script": {
        "source": "return doc.freq ;"
      }
    }
  },
  "analysis":
  {
    "tokenizer": {
      "space_punctuation": {
        "type": "pattern",
        "pattern": "[ |.,!?:;()\\[\\]\\{\\}]"
      }
    },
    "char_filter":
    {
      "&_to_and": {
        "type":       "mapping",
        "mappings": [ "&=> and "]
      }
    },
    "filter":
    {
      "jenny_turkish_stopwords":
      {
        "type":       "stop",
        "stopwords": "_turkish_"
      },
      "turkish_stemmer": {
        "type":       "stemmer",
        "language":   "turkish"
      },
      "jenny_turkish_shingle_2":
      {
        "type":	"shingle",
        "min_shingle_size": 2,
        "max_shingle_size": 2,
        "output_unigrams": true
      },
      "jenny_turkish_shingle_3":
      {
        "type":	"shingle",
        "min_shingle_size": 3,
        "max_shingle_size": 3,
        "output_unigrams": true
      },
      "jenny_turkish_shingle_4":
      {
        "type":	"shingle",
        "min_shingle_size": 4,
        "max_shingle_size": 4,
        "output_unigrams": true
      }
    },
    "analyzer":
    {
      "jenny_raw_nolc_analyzer":
      {
        "tokenizer":    "keyword"
      },
      "jenny_space_punctuation_nolc_analyzer":
      {
        "tokenizer":    "space_punctuation"
      },
      "jenny_base_nolc_analyzer":
      {
        "tokenizer":    "standard"
      },
      "jenny_raw_analyzer":
      {
        "tokenizer":    "keyword",
        "filter":       [ "lowercase" ]
      },
      "jenny_space_punctuation_analyzer":
      {
        "tokenizer":    "space_punctuation",
        "filter":       [ "lowercase" ],
        "char_filter":  [ "&_to_and" ]
      },
      "jenny_base_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "&_to_and" ],
        "filter":       [ "lowercase"]
      },
      "jenny_stop_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "&_to_and" ],
        "filter":       [ "lowercase", "jenny_turkish_stopwords"]
      },
      "jenny_base_stem_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "&_to_and" ],
        "filter":       [ "lowercase", "turkish_stemmer"]
      },
      "jenny_stem_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "&_to_and" ],
        "filter":       [ "lowercase", "jenny_turkish_stopwords", "turkish_stemmer"]
      },
      "jenny_shingles_2_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "html_strip", "&_to_and" ],
        "filter":       [ "lowercase", "jenny_turkish_shingle_2"]
      },
      "jenny_stemmed_shingles_2_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "html_strip", "&_to_and" ],
        "filter":       [ "lowercase", "turkish_stemmer", "jenny_turkish_shingle_2"]
      },
      "jenny_shingles_3_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "html_strip", "&_to_and" ],
        "filter":       [ "lowercase", "jenny_turkish_shingle_3"]
      },
      "jenny_stemmed_shingles_3_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "html_strip", "&_to_and" ],
        "filter":       [ "lowercase", "turkish_stemmer", "jenny_turkish_shingle_3"]
      },
      "jenny_shingles_4_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "html_strip", "&_to_and" ],
        "filter":       [ "lowercase", "jenny_turkish_shingle_4"]
      },
      "jenny_stemmed_shingles_4_analyzer":
      {
        "tokenizer":    "standard",
        "char_filter":  [ "html_strip", "&_to_and" ],
        "filter":       [ "lowercase", "turkish_stemmer", "jenny_turkish_shingle_4"]
      },
      "jenny_delimited_double": {
        "tokenizer":"whitespace",
        "encoding": "double",
        "filter": "delimited_payload"
      }
    }
  }
}
